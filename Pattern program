import java.util.*;
class Pattern
{
public static void main(String args[])
{
int i,j,n;
Scanner s=new Scanner(System.in);
n=s.nextInt();
for(i=1;i<=n;i++)
{
for(j=1;j<=i;j++)
{
System.out.print("*");
}
System.out.println();
}
for(i=n-1;i>0;i--)
{
for(j=i;j>0;j--)
{
System.out.print("*");
}
System.out.println();
}
}
}

Output:
E:\Coding>java Pattern
5
*
**
***
****
*****
****
***
**
*
