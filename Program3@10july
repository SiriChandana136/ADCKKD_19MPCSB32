import java.util.*;
import java.lang.*;
class Convertion
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int n;
System.out.println("Enter a decimal number : ");
n=sc.nextInt();
String c;
System.out.println("Enter your choice : ");
System.out.println("1.Decimal to Binary\n2.Decimal to Octal\n3.Decimal to Hexal");
char ch=sc.next().charAt(0);
switch(ch)
{
case '1':c=Integer.toBinaryString(n);
	System.out.println("Binary value : "+c);
	break;
case '2':c=Integer.toOctalString(n);
	System.out.println("Octal value : "+c);
	break;
case '3':c=Integer.toHexString(n);
	System.out.println("Hexal value : "+c);
	break;
default:System.out.println("Your choice is wrong");
	break;
}
}
}
